using DotNet;
using DotNet.AstUtils;

using Nitra;
using Nitra.Declarations;

namespace Tdl
{
  /// <summary>
  /// Description of Definition.
  /// </summary>
  ast Definition : BindableAst
  {
  stage 2:
    in DefinitionScope : Scope;

    Reference.Scope = DefinitionScope;
    Expr.Scope      = Scope;

    Reference : Reference;
    Expr      : DefExpr;
  }
}
