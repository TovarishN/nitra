using Nitra.Declarations;

namespace Nitra.Ast
{
  abstract ast RuleAttribute
  {
    | Start
    | Arity { Number : int; }
    | Prefix
    | Postfix
    | Infix
    | ExplicitSpaces
    | ImplicitSpaces
    | SuppressTrailingSpaces
    | AllowTrailingSpaces
    | NoParseTree
    | KeyToken
    | Keyword
    | Reference
    | Name
    | DynamicSyntaxExtender
    | DynamicSyntaxExtentionPoint
    | SplitAtCompletionPosition
    | SpanClass { Name : Nitra.Declarations.Reference; }
  }
}