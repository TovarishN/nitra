  public variant BinaryOp {
    | Or
    | And
    | Equal
    | NotEqual
    | LessEqual
    | Less
    | GreaterEqual
    | Greater
    | Sum
    | Sub
    | Mod
    | Mul
    | Div
  }

  public variant UnaryOp {
    | Identity
    | Negation
    | LogicalNegation
    | BitwiseNegation
    | PreIncrement
    | PreDecrement
    | PostIncrement
    | PostDecrement
  }
