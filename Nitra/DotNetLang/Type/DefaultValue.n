using Nemerle.Extensions;

namespace DotNet
{
  [StructuralEquality]
  public variant DefaultValue
  {
    | None      { }
    | Error     { }
    | Overflow  { }
    | Null      { }
    | Bool      { Value : bool; }
    | String    { Value : string; }
    | Number    { Value : ulong; IsUnsigned : bool; IsLong : bool; }
    | Custom    { Value : object; }
    | Single    { Value : float; }   // f
    | Double    { Value : double; }  // d
    | Decimal   { Value : decimal; } // m
  }
}
