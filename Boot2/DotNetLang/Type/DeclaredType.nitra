using Nitra;
using Nitra.Declarations;

using Nemerle.Collections;

using SCG = System.Collections.Generic;

namespace DotNet
{
  // enum, delegate, class, struct or interface
  abstract declaration DeclaredType : Type, CustomAttributeHostDeclaration, ModifierHostAndAst
  {
    unless (Modifiers.Flags.IsEmpty || Modifiers.Flags.Equals(Symbol.Flags))
      Error(context, "Partial declarations of type have conflicting accessibility modifiers.");
  }
}
