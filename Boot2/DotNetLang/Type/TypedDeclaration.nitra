using Nitra.Declarations;

namespace DotNet
{
  abstract declaration TypedDeclaration
  {
    symbol
    {
      Kind  = "typed declaration";
      Scope = Type.Scope;
    stage 1:
      in Type : TypeSymbol;
    }
  }

  abstract declaration SelfTypedDeclaration : TypedDeclaration
  {
    stage 1:
      out TypeRef : Ref[TypeSymbol];

    Symbol.Type = TypeRef.Symbol;
  }
}
